<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vanh1200.lovemusic">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/square_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/circle_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.vanh1200.lovemusic.screen.main.MainActivity" />
        <activity
            android:name=".screen.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
